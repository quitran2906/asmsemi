{% extends 'base_admin.html.twig' %}

{% block title %}Color index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #2c2c2c;
            color: #fff;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #f44336;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #444;
            color: #fff;
        }

        .table a {
            color: #4caf50;
            margin-right: 10px;
            text-decoration: none;
        }

        .table a:hover {
            color: #45a049;
        }

            .create-new-btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 3px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            background-color: #4caf50;
            color: #fff;
            transition: background-color 0.3s;
            margin-top: 20px;
        }

        .actions {
            display: flex;
            gap: 5px;
        }

        .actions a {
            padding: 8px 16px;
            text-decoration: none;
            color: #fff;
            border-radius: 3px;
            font-weight: bold;
            transition: background-color 0.3s;
            cursor: pointer;
            margin: 0;
        }

        .actions a:hover {
            background-color: #666;
        }

        .actions .show {
            background-color: #f44336;
        }

        .actions .edit {
            background-color: #4caf50;
        }

        .create-new-btn:hover {
            background-color: #45a049;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Color index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.id }}</td>
                <td>{{ color.name }}</td>
                <td class="actions">
                    <a href="{{ path('app_color_show', {'id': color.id}) }}"class="show">Show</a>
                    <a href="{{ path('app_color_edit', {'id': color.id}) }}"class="edit">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_color_new') }}" class="create-new-btn">Create new</a>
{% endblock %}
