
{% extends 'base_admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #2c2c2c;
            color: #fff;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #f44336;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #444;
            color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

        .table th, .table td {
            border: 1px solid #333;
            padding: 12px;
            text-align: left;
        }

        .actions {
            display: flex;
            gap: 5px;
        }

        .actions a {
            padding: 8px 16px;
            text-decoration: none;
            color: #fff;
            border-radius: 3px;
            font-weight: bold;
            transition: background-color 0.3s;
            cursor: pointer;
            margin: 0;
        }

        .actions a:hover {
            background-color: #666;
        }

        .actions .show {
            background-color: #f44336;
        }

        .actions .edit {
            background-color: #4caf50;
        }

        .create-new-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #f44336;
            color: #fff;
            text-decoration: none;
            border-radius: 3px;
            font-weight: bold;
            margin-top: 20px;
            transition: background-color 0.3s;
            cursor: pointer;
        }

        .create-new-btn:hover {
            background-color: #666;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Product Index</h1>

    <table class="table">
        <thead>
        <tr>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.image }}</td>
                <td class="actions">
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="show">Show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="edit">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}" class="create-new-btn">Create New</a>
{% endblock %}