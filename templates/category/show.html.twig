
{% extends 'base_admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #2c2c2c;
            color: #fff;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #f44336;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #444;
            color: #fff;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .table th, .table td {
            border: 1px solid #333;
            padding: 12px;
            text-align: left;
        }

        .back-to-list, .edit-link {
            display: inline-block;
            padding: 10px 20px;
            background-color: #f44336;
            color: #fff;
            text-decoration: none;
            border-radius: 3px;
            font-weight: bold;
            margin-right: 10px;
            transition: background-color 0.3s;
            cursor: pointer;
        }

        .back-to-list:hover, .edit-link:hover {
            background-color: #666;
        }

        .btn{
            background-color: #f44336;
            color: #fff;
            font-weight: bold;
            transition: background-color 0.3s;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}"class="back-to-list">t</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}"class="edit-link">Edit</a>
    <div class="btn">
        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
