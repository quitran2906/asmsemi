    </head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-7" style="background-color: whitesmoke;">
            <div class="container">
                <div class="card">
                    <img class="card-body"   src="{{ asset('image/' ~ product.getImage()) }}" alt="{{ product.getName() }}">
                </div>
        </div>
        </div>
        <div class="col-sm-5" style="background-color: #b3d7ff;">
            <h1 >
                {{ product.id }}. {{ product.name }}
            </h1>
                    <p class="price">{{ product.price }}.VND</p>
                    <p class="p1">{{ product.description }}</p>
                    <p class="p2">COLOR: {{ product.color }}</p>
                    <p class="p2">SIZE: {{ product.size }}</p>
                    <p class="p2">CATEGORY: {{ product.category }}</p>
                    <p><button>Add to Cart</button></p>
        </div>
    </div>
</div>

</body>



{% endblock %}





